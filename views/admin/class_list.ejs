<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h2 class="card-title"><b><u>Class List</u></b></h2>
			<p class="card-description">
				<a href="/admin/class"><button class="btn btn-inverse-dark btn-fw">Add class</button></a>
				
			</p>
			<div class="table-responsive">
				<table class="table table-bordered" id="myTable">
					<thead>
						<tr>
							<th>
								#
							</th>
							<th>
								Class name
							</th>
							<th>
								Numeric Value
							</th>
							<th>
								Action
							</th>
							
						</tr>
					</thead>
					<tbody>
					<%  var i=1; class_list.forEach(function(class_list){ %>
						<tr id="tr_<%= i %>">
							<td >

								<%= i %>
							</td>
							<td>
								<%= class_list.class_name %>
							</td>
							<td>
								<%= class_list.class_name_numeric %>
							</td>

							<td>
							 <a href="/admin/class/?id=<%= class_list.class_id %>">

								<button type="button" class="btn btn-dark btn-fw">
                         	 	<i class="mdi mdi-cloud-download"></i>Edit
                         	 	</button>
                         	 </a>

                         	 
                         	 <a href="#"  onclick="delete_record('<%= class_list.class_id %>','<%= i %>','tbl_class','class_id')" class="btn btn-sm btn-danger">Delete</a>

                         	 </td>

							
						</tr>
					<% i++; })%>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
