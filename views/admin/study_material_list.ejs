<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h2 class="card-title"><b><u>Study Material List</u></b></h2>
			<p class="card-description">
				<a href="/admin/study_material"><button class="btn btn-inverse-dark btn-fw">Add Study Material</button></a>
				
			</p>
			<div class="table-responsive">
            <table class="table table-bordered" id="myTable">
              <thead>
                <tr>
                  <th>
                    #
                  </th>
                  <th>
                   Class Name
                  </th>
                  <th>
                    Subject Name
                  </th>
                  <th>
                    Title
                  </th>
                  <th>
                    Description
                  </th>
                  <th>
                    Action
                  </th>
                  
                </tr>
              </thead>
              <tbody>
                <%  var i=1; document_list.forEach(function(document_list){ %>
                <tr>
                  <td>
                    <%= i %>
                  </td>
                  <td>
                    <%= document_list.class_name %>
                  </td>
                  <td>
                    <%= document_list.name %>
                  </td>
                  <td>
                    <%= document_list.title %>
                  </td>
                  <td>
                    <%= document_list.description %>
                  </td>
                  <td>
                   <a href="#">
                    <button type="button" class="btn btn-dark btn-fw">
                                <i class="mdi mdi-cloud-download"></i>Edit
                                </button>
                               </a>
                               <a href="#">

                               <button type="button" onclick="delete_hospital('1','2')" class="btn btn-danger btn-fw">
                                 <i class="mdi mdi-alert-outline"></i>Delete
                               </button>
                               </a>
                  </td>
                </tr>
                <% i++; })%>
              </tbody>
            </table>
          </div>
		</div>
	</div>
</div>
