<style type="text/css">
	.Attendence-select{
	position: relative;
	}
	.table-responsive .select{
		position: absolute;
		transform: translateX(-50%) translateY(-50%);
		left: 50%;
		top: 15%;
		width: 460px;
		z-index: 9999;
	}
	.select select{
		width: 120px!important;
		float: left;
		height: 32px;
		margin: 0px 25px 0px 5px!important;
		border: 1px solid #ccc;
		background-color: #fff;
	}
</style>
<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body Attendence-select">
			<h2 class="card-title"><b><u>Attendence</u></b></h2>
			<p class="card-description">
				<a href="#"><button class="btn btn-inverse-dark btn-fw">Attendence</button></a>
				
			</p>
			<div class="table-responsive">
				<div class="">
					<form class="form-inline" action="/action_page.php">
					  <div class="form-group" style="width: 100%;">
                       
                         <label for="exampleInputEmail2" class="col-sm-2 col-form-label">Class Name</label>
			              <div class="col-sm-2">
			               <select class="form-control" id="class_id" name="class_id">
			                <option value="">Select Class</option>
			                <%  class_list.forEach(function(class_list){ %>
			                <option value="<%= class_list.class_id  %>"><%= class_list.class_name; %></option>
			                
			                <%   }) %>
			               </select>
			              </div>
			            <label for="exampleInputPassword2" class="col-sm-0 col-form-label">Section Name</label>
			            <div class="col-sm-2">
			               <select class="form-control" name="section_id"  id="section_id_stop" onchange="get_studentlist_attendance()">
			                 <option>Select Section</option>
			               </select>
			            </div>

                        <label class="col-sm-1 col-form-label" for="email">Month</label>
                        <div class="col-sm-2">
						    <select class="form-control" id="month_id">
						    <%  Object.keys(month).forEach(function (key){ %>
						    	<option value="<%= key %>"><%= month[key] %></option>
						    	
						    <% }) %>
						    </select>
					     </div>

						<label class="col-sm-1 col-form-label" for="pwd">Year</label>
					    <div class="col-sm-1">
						    <select class="form-control" id="currentyear" name="year" > 
						    	<option value="<%= year %>"><%= year %></option>
						    	<option value="<%= nextyear %>"><%= nextyear %></option>
						    	
						    </select>
					    </div>
					  </div>
					</form>
				</div>
				<br><br>
				<div class="clearfix"></div>
				 
				<table class="table table-bordered table-1 studentlistTable" id="myTable">
					<thead>
						<tr>
							<th>
								#
							</th>
							<th>
								Name 
							</th>
							<th>
								Class Name
							</th>	
							<th>Section Name</th>
							<th>
								Dob 
							</th>
							<th>
								Gender 
							</th>
							<th>
								Email
							</th>
							<th>Phone</th>
							<th>Action</th>
							
						</tr>
					</thead>
					<tbody>
					<% if(student_information!=""){ %>	
					<%  var i=1; student_information.forEach(function(data){ %>
						<tr id="tr_<%= i %>">
							<td >

								<%= i %>
							</td>
							<td>
								<%= data.name %>
							</td>
							<td>
								<%= data.class_name %>
							</td>
							<td>
								<%= data.section_name %>
							</td>
							<td>
								<%= data.dob %>
							</td>
							
							<td>
								<%= data.sex %>
							</td>
							<td>
								<%= data.email %> 
							</td>
							<td>
								<%= data.phone %>
							</td>
							<td>
								<a href="javascript:void(0)"  onclick="get_parent_student_attendance('<%= data.class_id  %>','<%= data.section_id  %>','<%= data.registration_id  %>')" class="btn btn-sm btn-primary">View</a>
							</td>
							

							
						</tr>
					<% i++; })
				     }
					%>
					</tbody>
				</table>
			  </div>
			</div>
			 
			<div id="attendance" style="display: none;">
				<h2>Attendance Report </h2>
				<div class="table-responsive">
					<table class="table table-bordered" id="student_attendance_table">
						<thead>
							<!-- <tr>
								<th>
									#
								</th>
								
								<th>
									Class Name
								</th>	
								
								<th>
									Subject Name 
								</th>
								<th>
									Title 
								</th>
								<th>
									Description
								</th>
								<th>File</th>
								
								
							</tr> -->
						</thead>
						<tbody>
						
						</tbody>
					</table>
				</div>
			</div>
					
		</div>
	</div>
</div>
